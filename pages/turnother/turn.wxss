}
.refuse{
  position: absolute;
  left: 230px;
  top: 70%;
  background-color: red;
  font-size: 12px;
  color: wheat;
}
.gongnneg{
  position: absolute;
  z-index: 1;
  height: 20px;
  width: 80%;
  box-shadow: 4px 4px 8px  rgba(0,0,0,0.5);
  padding: 10px 10px;
  border-radius: 16px;
  background-color: white;
  top: 10px;
  left: 7%;
