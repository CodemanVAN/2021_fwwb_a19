.input_bar{
  position: absolute;
  left: 7%;
  width: 80%;
  box-shadow: 4px 4px 8px  rgba(0,0,0,0.5);
  padding: 10px 10px;
  border-radius: 16px;
  background-color: white;
}

.box{
  position: relative;
  z-index: 1;
  height: 100px;
  width: 80%;
  top: 10%;
  margin-top: 5px;
  box-shadow: 4px 4px 8px  rgba(0,0,0,0.5);
  padding: 10px 10px;
  border-radius: 16px;
  background-color: #aebde0;
  left: 7%;
  margin-bottom: 10px;
}
.usericon{
  top: 10px;
  left: 10px;
  position: absolute;
  height: 90px;
  width: 90px;
}
.bt{
  position: absolute;
  bottom: 10px;
  left: 25%;
  background-color:#aebde0;

}
.scroll{
  position: absolute;
  z-index: 1;
  width: 100%;
  top: 10%;
  z-index: -1;
  white-space: nowrap;
}
.empty{
  width: 100%;
  height: 600px;
}
.name {
  position: absolute;
  width: 100%;
  left: 120px;
  font-size: 18px;
  font-weight: 1000;
}
.partment{
  position: absolute;
  left: 120px;
